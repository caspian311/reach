<div class="title"> 
  <%= @title %>: <%= @map_name %>
</div> 
<div class="content"> 

<strong>Map:</strong>
<select onchange="window.location='/player_effectiveness/' + this.value">
<option value=""></option>
<% @maps.each do |map| %>
   <option <%= (map.name == @map_name) ? "selected='selected'": "" %> value="<%= map.name %>"><%= map.name %></option>
<% end %>
</select>

<br /><br />

<table>
<tr>
   <th>Player Name</th>
   <th>Map</th>
   <th>Effectiveness</th>
</tr>
<% @player_stats.each do |player_stat| %>
<tr>
   <td><%= player_stat.player_name %></td>
   <td><%= player_stat.map %></td>
   <td><%= player_stat.effectiveness %></td>
</tr>
<% end %>
</table>

</div>
