<div class="title"> 
  <%= @title %>
</div> 
<div class="content"> 
  Below is a list of all the games in the database...

<table border="1">
<tr>
   <th>ID</th>
   <th>Name</th>
   <th>Map</th>
   <th>Date</th>
   <th>Duration</th>
</tr>
<% @games.each do |game| %>
<tr>
   <td><%= game.reach_id %></td>
   <td><%= game.name %></td>
   <td><%= game.reach_map.name %></td>
   <td><%= game.timestamp %></td>
   <td><%= game.duration %></td>
</tr>
<% end %>
</table>

</div> 
